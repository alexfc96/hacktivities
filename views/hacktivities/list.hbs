<h1>List all Hacktivities</h1>
<ul>
  {{#each hacktivities }}
  <li>
    <a href="/hacktivities/{{this._id}}">{{ this.name }}</a>
   {{#if this.host}} 
   <form action="/hacktivities/{{this._id}}/delete" method="post">
    <button type="submit">Delete hacktivity</button>
    </form>
    {{/if}}
  </li>
  {{/each}}
</ul>

