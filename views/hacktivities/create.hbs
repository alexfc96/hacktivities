 <link rel="stylesheet" href='/stylesheets/form.css'>
 <div class="form-hack">

  <form id="survey-form" action="/hacktivities/create" method="post" onsubmit="return confirm('Are you sure you want to create the hacktivity?');">
    <div class="form-group">
      <label id="name-label" for="name">Name</label>
      <input type="text" name="name" id="name" class="form-control" placeholder="Hacktivity name" required/>
     </div>
     <div class="form-group">
      <label id="name-label" for="description">Description</label>
      <input type="text" name="description" id="name" class="form-control" placeholder="Describe your Hacktivity" required/>
     </div>
     <div class="form-group" id="date-form">
          <label id="name-label" for="date">Date</label>
          <input type="date" name="date" id="hacktivity-date">
           
     </div>

        <div class="form-group">
       <label id="name-label" for="hour">Choose the hour: </label>
       <input class="form-control" id="starthour" type="time" name="starthour" value="17:30" min="08:00" max="22:00" require>
       </div>
       
         <div class="form-group">
            <label id="name-label" for="duration">Duration <span class="clue">(Minutes)</span></label>
              
              <input type="number" class="form-control" name="duration" id="hacktivity-duration" placeholder="Specify in minutes" pattern="[0-9]{2}" minlength="2" maxlength="3" min="10" max="480">

          </div>

       <div class="form-group">
      <label id="name-label"  for="location"> Which location? </label>
        <select id="dropdown" name="location" class="form-control" required>
            {{#each city}}
              <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
      </div>

    <div class="form-group">
      <button type="submit" id="submit" class="submit-button">Create hacktivity</button>
    </div>
    </form>
</div>
