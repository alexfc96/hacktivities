<form action="/hacktivities/create" method="post">
 
  {{!-- <input type="text" name="location" id="hacktivity-location"> --}}
  <label for="name">Hacktivity</label>
  <input type="text" name="name" id="hacktivity-name" placeholder="Hacktivity name">
  <label for="descripton">Description</label>
  <input type="text" name="description" id="hacktivity-description" placeholder="Describe your Hacktivity">
  <label for="date">Date</label>
  <input type="date" name="date" id="hacktivity-date">
  {{#if error}}
    <p>{{error}}</p>
  {{/if}}
    {{!-- <label for="hour">Choose the hour: </label>
  <input id="hacktivity-hour" type="time" name="hour" value="17:30" min="09:00" max="20:00" require> --}}
  <label for="location">Location</label>
  <select name="location" id="hacktivity-location">
   {{#each city}}
   <option value="{{this._id}}">{{this.name}}</option>
   {{/each}}
  </select>
  <label for="duration">duration</label>
  {{#if timeError}}  
    <input type="number" name="duration" id="hacktivity-duration" placeholder="Specify in minutes" pattern="[0-9]{2}" minlength="2" maxlength="3" value="{{timeError}}">
    {{else}}
    <input type="number" name="duration" id="hacktivity-duration" placeholder="Specify in minutes" pattern="[0-9]{2}" minlength="2" maxlength="3">
  {{/if}}
  <button type="submit">Create hacktivity</button>
</form>


