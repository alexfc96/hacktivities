
<link rel="stylesheet" href='/stylesheets/form.css'>
 <div class="form-hack-update">

  <form id="survey-form" action="/hacktivities/{{hacktivity._id}}/update" method="post">
    <div class="form-group">
      <label id="name-label" for="name">Name</label>
      <input type="text" name="name" id="name" class="form-control" value="{{hacktivity.name}}"/>
     </div>
     <div class="form-group">
      <label id="name-label" for="description">Description</label>
      <input type="text" name="description" id="name" class="form-control" value="{{hacktivity.description}}"/>
     </div>
     <div class="form-group" id="date-form">
          <label id="name-label" for="date">Date</label>
          <input type="date" name="date" id="hacktivity-date" value="{{hacktivity.date}}">
            {{#if dateError}}
              <p>{{dateError}}</p>
            {{/if}}
     </div>

        <div class="form-group">
       <label id="name-label" for="hour">Choose the hour: </label>
       <input class="form-control" id="starthour" type="time" name="starthour" value="{{hacktivity.starthour}}" min="08:00" max="22:00" >
       </div>

    
         <div class="form-group">
            <label id="name-label" for="duration">Duration <span class="clue">(Minutes)</span></label>
              {{#if timeError}}  
              <input type="number" class="form-control" name="duration" id="hacktivity-duration" placeholder="Specify in minutes" pattern="[0-9]{2}" minlength="2" maxlength="3" value="{{timeError}}">
              {{else}}
              <input type="number" class="form-control" name="duration" id="hacktivity-duration" placeholder="Specify in minutes" pattern="[0-9]{2}" minlength="2" maxlength="3" value="{{hacktivity.duration}}">
              {{/if}}
          </div>


    <div class="form-group">
      <button type="submit" id="submit" class="submit-button">Update Hacktivity</button>
    </div>
    </form>
</div>