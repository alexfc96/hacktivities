<link rel="stylesheet" href='/stylesheets/login.css'>
<div class="update-user">
<h3>Do you want to update any information about your profile?</h3>

 

<form id="form" class='db'action="/user/{{currentUser._id}}/update" method="post">
  <label for="username">Username</label>
  <input   class="fadeIn second"type="text" name="username" id="username" placeholder="username" value="{{currentUser.username}}" minlength="4">
  <label for="currentpassword">Current password</label>
  <input   class="fadeIn second" type="password" name="currentpassword" id="currentpassword" placeholder="******">
  <label for="newuserpassword">New password</label>
  <input class="fadeIn second"  type="password" name="newuserpassword" id="newuserpassword" placeholder="******" minlength="6">
  <button type="submit">UPDATE!</button>
</form>


<h3>Delete User?</h3>
<form class='db' action="/user/{{currentUser._id}}/delete" method="post">
  <button type="submit">DELETE!</button>
</form>



